<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css"/>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css"/>
<style>
  /* Styles for tabs */
  .tabs {
    display: flex;
    justify-content: space-around;
    list-style: none;
    padding: 0;
  }
  .tabs li {
    cursor: pointer;
    padding: 10px 20px;
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    border-radius: 5px 5px 0 0;
  }
  .tabs li.active {
    background-color: #ccc;
  }
  .tab-content {
    display: none;
    padding: 20px;
    border: 1px solid #ccc;
    border-top: none;
  }
  .box {
    width: 100px;
    height: 100px;
    background-color: #ccc;
    margin: 10px;
  }
  /* Styles for Slick slider arrows */
  .slick-prev, .slick-next {
    position: absolute;
    top: 50%;
    z-index: 1;
    width: 30px;
    height: 30px;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .slick-prev {
    left: 10px;
  }
  .slick-next {
    right: 10px;
  }
</style>

<ul class="tabs">
   {%- for block in section.blocks -%}
     {% assign custom-collection = block.settings.collection %}
  <li class="tab-link" data-tab="{{ 'tab-' | append: forloop.index }}">{{ custom-collection.title }}</li>
  {%- endfor %}
</ul>

{%- for block in section.blocks -%}
<div id="{{ 'tab-' | append: forloop.index }}" class="tab-content">
  <div class="slider">
    {% for product in block.settings.collection.products %}
      <div class="box">
        <h3>{{ product.title }}</h3>
        <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{product.featured_image.alt}}" />
      </div>
    {% endfor %}
  </div>
</div>
{%- endfor %}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
<script>
 
  function slick_slider(){
 
    $(".tab-link").click(function(){
      var tab_id = $(this).attr("data-tab");
      
      $(".tab-link").removeClass("active");
      $(".tab-content").hide();
      
      $(this).addClass("active");
      $("#"+tab_id).fadeIn();

      // Initialize Slick slider
      $("#"+tab_id+" .slider").slick({
        slidesToShow: 3,
        slidesToScroll: 1,
        prevArrow: '<button type="button" class="slick-prev">&#10094;</button>',
        nextArrow: '<button type="button" class="slick-next">&#10095;</button>',
        responsive: [
          {
            breakpoint: 768,
            settings: {
              slidesToShow: 2
            }
          },
          {
            breakpoint: 480,
            settings: {
              slidesToShow: 1
            }
          }
        ]
      });
    });

    // Show the first tab content by default
    $(".tab-link:first").click();
  }
  $(document).ready(function(){
    slick_slider();
  });
$(document).on("shopify:section:load", function () {
    slick_slider();
});
</script>


{% schema %}
  {
    "name": "tab-slider",
    "settings": [],
    "blocks": [
            {
                "type": "tab",
                "name": "tab",
                "settings": [
              {
                "type":"text",
                "id": "tab_title",
                "label": "Title"
              },
              {
                "type":"collection",
                "id": "collection",
                "label": "Collection"
              }
              
        ]
            }
        ],
  "presets": [
    {
      "name": "tab-slider"
    }
  ]
  }
{% endschema %}   